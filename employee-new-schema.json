{
  "name": "Firebase Dashboard Employee Schema",
  "description": "Complete schema for generating realistic employee data for all dashboard charts",
  "version": "2.0",
  "structure": "flat",
  "total_records": 1000,
  "fields": [
    {
      "name": "firstName",
      "type": "First Name",
      "description": "Employee first name",
      "required": true
    },
    {
      "name": "lastName",
      "type": "Last Name", 
      "description": "Employee last name",
      "required": true
    },
    {
      "name": "email",
      "type": "Email Address",
      "description": "Work email address",
      "formula": "{{firstName}}.{{lastName}}@company.com",
      "required": true
    },
    {
      "name": "gender",
      "type": "Custom List",
      "description": "Gender identity",
      "values": ["Male", "Female", "Non-binary"],
      "weights": [48, 48, 4],
      "required": true
    },
    {
      "name": "dob",
      "type": "Date",
      "description": "Date of birth",
      "min": "1970-01-01",
      "max": "2005-12-31",
      "required": true
    },
    {
      "name": "location",
      "type": "Custom List",
      "description": "Work location",
      "values": [
        "San Francisco", "New York", "Los Angeles", "Seattle", "Chicago",
        "Boston", "Austin", "Denver", "Miami", "Portland", "Phoenix",
        "Atlanta", "Dallas", "Houston", "San Diego", "Nashville",
        "Remote", "London", "Toronto", "Berlin"
      ],
      "weights": [15, 12, 10, 8, 7, 6, 5, 4, 4, 3, 3, 3, 3, 3, 2, 2, 8, 2, 2, 1],
      "required": true
    },
    {
      "name": "department",
      "type": "Custom List",
      "description": "Department assignment",
      "values": [
        "Engineering", "Marketing", "Sales", "Human Resources",
        "Finance", "Product Management", "Operations", "Customer Success"
      ],
      "weights": [30, 15, 15, 10, 10, 10, 5, 5],
      "required": true
    },
    {
      "name": "level",
      "type": "Custom List",
      "description": "Seniority level",
      "values": ["Intern", "Junior", "Mid", "Senior", "Lead", "Director"],
      "weights": [5, 25, 35, 25, 8, 2],
      "required": true
    },
    {
      "name": "role",
      "type": "Job Title",
      "description": "Job title based on department and level",
      "required": true
    },
    {
      "name": "startDate",
      "type": "Date",
      "description": "Employment start date",
      "min": "2010-01-01",
      "max": "2024-12-31",
      "required": true
    },
    {
      "name": "status",
      "type": "Custom List",
      "description": "Employment status",
      "values": ["Active", "On Leave", "Terminated"],
      "weights": [95, 4, 1],
      "required": true
    },
    {
      "name": "isActive",
      "type": "Boolean",
      "description": "Active employee flag",
      "formula": "status === 'Active'",
      "required": true
    },
    {
      "name": "baseSalary",
      "type": "Number",
      "description": "Annual base salary",
      "min": 40000,
      "max": 300000,
      "decimal": 0,
      "required": true
    },
    {
      "name": "bonus",
      "type": "Number",
      "description": "Annual bonus",
      "min": 0,
      "max": 50000,
      "decimal": 0,
      "required": true
    },
    {
      "name": "currency",
      "type": "Custom List",
      "description": "Currency code",
      "values": ["USD"],
      "weights": [100],
      "required": true
    },
    {
      "name": "payFrequency",
      "type": "Custom List",
      "description": "Pay frequency",
      "values": ["Semi-Monthly"],
      "weights": [100],
      "required": true
    },
    {
      "name": "healthInsurance",
      "type": "Boolean",
      "description": "Health insurance coverage",
      "true_percentage": 95,
      "required": true
    },
    {
      "name": "retirementPlan",
      "type": "Custom List",
      "description": "Retirement plan tier",
      "values": ["Tier1", "Tier2", "Tier3", "Not Enrolled"],
      "weights": [40, 35, 20, 5],
      "required": true
    },
    {
      "name": "vacationDaysTotal",
      "type": "Number",
      "description": "Total vacation days",
      "min": 15,
      "max": 30,
      "decimal": 0,
      "required": true
    },
    {
      "name": "vacationDaysUsed",
      "type": "Number",
      "description": "Vacation days used",
      "min": 0,
      "max": 25,
      "decimal": 0,
      "required": true
    },
    {
      "name": "performanceRating",
      "type": "Number",
      "description": "Performance rating (1-5)",
      "min": 2.0,
      "max": 5.0,
      "decimal": 1,
      "required": true
    },
    {
      "name": "performanceTrend",
      "type": "Custom List",
      "description": "Performance trend direction",
      "values": ["improving", "stable", "declining"],
      "weights": [30, 60, 10],
      "required": true
    },
    {
      "name": "lastPerformanceReview",
      "type": "Date",
      "description": "Last performance review date",
      "min": "2023-01-01",
      "max": "2024-12-31",
      "required": true
    },
    {
      "name": "createdAt",
      "type": "Date",
      "description": "Record creation timestamp",
      "formula": "Current timestamp",
      "required": true
    }
  ],
  "constraints": {
    "age_tenure_relationship": {
      "description": "Older employees should have longer tenure",
      "rules": [
        "Employees under 25: max 3 years tenure",
        "Employees 25-35: 1-8 years tenure",
        "Employees 35-45: 3-15 years tenure",
        "Employees 45+: 5+ years tenure"
      ]
    },
    "salary_level_relationship": {
      "description": "Salary should correlate with level and experience",
      "ranges": {
        "Intern": [40000, 50000],
        "Junior": [50000, 75000],
        "Mid": [70000, 110000],
        "Senior": [100000, 150000],
        "Lead": [130000, 180000],
        "Director": [160000, 300000]
      }
    },
    "performance_tenure_relationship": {
      "description": "Performance should correlate with tenure",
      "rules": [
        "New employees (0-1 years): 2.5-4.0 rating",
        "Junior employees (1-3 years): 3.0-4.5 rating",
        "Mid+ employees (3+ years): 3.5-5.0 rating"
      ]
    },
    "department_location_relationship": {
      "description": "Certain departments are more common in certain locations",
      "patterns": {
        "Engineering": ["San Francisco", "Seattle", "Austin", "Remote"],
        "Finance": ["New York", "Chicago", "Boston"],
        "Sales": ["New York", "Los Angeles", "Dallas", "Miami"],
        "Marketing": ["New York", "Los Angeles", "Chicago"]
      }
    }
  },
  "chart_coverage": {
    "executive_overview": "✅ Complete - headcount, departments, levels, gender",
    "salary_trends": "✅ Complete - multi-year data with realistic progression",
    "performance_analytics": "✅ Complete - heatmap, trends, distribution",
    "risk_analysis": "✅ Complete - performance risk, retention risk, alerts",
    "demographics": "✅ Complete - age, location, tenure, diversity",
    "ai_insights": "✅ Complete - rich data for analysis"
  },
  "export_settings": {
    "format": "JSON",
    "structure": "flat",
    "naming": "realistic_employee_data.json",
    "encoding": "UTF-8"
  }
}
